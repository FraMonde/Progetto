<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_map_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In questa modalità potrai sempre sapere dove sono i tuoi amici!
Mantieni il device il più orizzontale possibile, la luce ti indicherà la corretta orientazione."
        android:textSize="16sp"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/picture_map_popup"
        android:layout_gravity="center_horizontal"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="non mostrare di nuovo"
        android:id="@+id/check_map_opup"
        android:textColor="#000000"
        android:buttonTint="#000000"
        android:layout_gravity="center_horizontal" />
</LinearLayout>