<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_map_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Modalità mappa!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#32647b" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="5dp"
        android:background="#6DAEBE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="In questa modalità potrai sempre sapere dove sono i tuoi amici!
Mantieni il device il più orizzontale possibile, la luce verde ti indicherà se mantieni la corretta posizione."
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/picture_map_popup" />

    <CheckBox
        android:id="@+id/check_map_opup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:buttonTint="#000000"
        android:text="Non mostrare più"
        android:textColor="#000000" />
</LinearLayout>